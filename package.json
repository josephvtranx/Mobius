{
  "name": "mobius-lms",
  "version": "1.0.0",
  "description": "Mobius Learning Management System",
  "private": true,
  "dependencies": {
    "date-fns": "^4.1.0",
    "express-session": "^1.18.1",
    "luxon": "^3.7.1"
  },
  "scripts": {
    "build": "npm --prefix server install && npm --prefix client install && npm --prefix client run build",
    "start": "npm --prefix server start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev:server:windows": "cd server && npm run dev:windows",
    "dev:windows": "concurrently \"npm run dev:server:windows\" \"npm run dev:client\"",
    "dev:setup": "npm run install:all && node setup-dev.js",
    "env:setup": "node setup-dev.js",
    "install:all": "npm install && npm --prefix server install && npm --prefix client install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
